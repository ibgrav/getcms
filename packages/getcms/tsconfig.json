{
  "include": ["src/**/*", "netlify/**/*", "vite.config.ts"],

  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",

    "jsx": "react-jsx",
    "types": ["vite/client"],

    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },

    "strict": true,
    "esModuleInterop": true
  }
}
